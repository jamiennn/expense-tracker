<form action="/records/{{expense._id}}?_method=PUT" method="POST" id="form" class="needs-validation" novalidate>
  <p class="create-title text-info">請輸入您的支出</p>
  <p class="required-input"><span class="text-danger mx-1">*</span>為必填項目</p>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        {{!-- name --}}
        <div class="mb-4">
          <label class="text-secondary" for="name">
            <i class="fas fa-file-signature pr-2"></i>
            名稱：
          </label>
          <input type="text" name="name" id="name" placeholder="name" value="{{expense.name}}" class="form-control"
            maxlength="22" required>
          <div class="invalid-feedback">請填寫22個字元以內的名稱</div>
        </div>

        {{!-- date --}}
        <div class="mb-4 row">
          <div class="col-sm-4">
            <label class="text-secondary" for="date">
              <i class="fas fa-calendar-days pr-2"></i>
              日期：
            </label>
            <input type="date" name="date" id="date" placeholder="date" value="{{expense.date}}" class="form-control"
              required>
            <div class="invalid-feedback">請填寫日期</div>
          </div>
        </div>

        {{!-- category --}}
        <div class="mb-4 row">
          <div class="col-sm-4">
            <div class="form-group">
              <label class="text-secondary" for="category">
                <i class="fas fa-folder-tree pr-2"></i>
                類別：
              </label>
              <select name="categoryId" id="category" class="form-select" value="{{idd}}" required>
                <option value="" id="none" disabled>請選擇</option>
                {{#each categorys}}
                <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
              </select>
              <div class="invalid-feedback">請選擇類別</div>
            </div>
          </div>
        </div>


        {{!-- amount --}}
        <div class="mb-4 row">
          <div class="col-sm-4">
            <label class="text-secondary" for="amount">
              <i class="fas fa-dollar-sign pr-2"></i>
              金額：
            </label>
            <input type="number" name="amount" id="amount" placeholder="1~1,000,000,000" min="1" max="1000000000"
              step="1" class="form-control" value="{{expense.amount}}" inputmode="numeric" required>
            <div class="invalid-feedback">請輸入1~1,000,000,000之間的數字</div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-auto text-center mb-3">
      <a href="/" class="btn btn-primary">Back</a>
      <button type="submit" id="submit" class="btn btn-info mx-1">提交</button>
    </div>

</form>